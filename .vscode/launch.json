    "version": "0.2.0",
    "configurations": [
        // Specific configuration for debugging.
        // Disable code coverage.
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            },
            "justMyCode": false
        },

        // Debugging Web Application
        {
            "name": "Debug Django WebApp",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\webapp\\manage.py",
            "args": [
                "runserver",
            ],
            "env": {
                "DJANGO_DEBUG": "ON"
            },
            "django": true
        },

        // Debugging Command Line
        {
            "name": "Debug Commandline",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\webapp\\manage.py",
            "args": [
            ],
            "env": {
            },
        },

        // Jest Debug - API Client
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests API Client",
            "program": "${workspaceRoot}\\cleansecpy-api-client\\node_modules\\jest\\bin\\jest.js",
            "args": [
                "-i",
                "-c",
                "${workspaceRoot}/cleansecpy-api-client/jest.config.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}